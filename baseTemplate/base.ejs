<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <link
    rel="stylesheet"
    href="<%= fontAwesomePath %>"
    integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
  <link rel="stylesheet" href="<%= cssPath %>" />
  <title><%= title %> | <%= pageTitle %></title>
</head>
<body>

  <!-- Header -->
  <header id="header" class="fixed w-full shadow-md header">

    <!-- DESKTOP -->
    <div class="container mx-auto hidden md:flex lg:flex justify-between items-center px-4 py-4">

      <!-- Logo for Desktop -->
      <div class="w-1/3 text-2xl font-bold text-black">
        <a href="index.html" class="hidden md:block lg:block transition duration-300 hover:text-gray-600">
          <img src="../assets/public/images/logo.png" alt="Logo" class="h-36" />
        </a>
      </div>

      <!-- Desktop Menu -->
      <nav class="relative w-1/3 hidden md:flex lg:flex bg-white">
        <ul class="w-full flex justify-evenly py-3">
          <li class="ml-10">
            <a href="<%= navItems[0].href %>" class="text-gray-700 transition duration-300"><%= navItems[0].text %></a>
          </li>
          <li class="ml-10">
            <a href="<%= navItems[1].href %>" class="text-gray-700 transition duration-300"><%= navItems[1].text %></a>
          </li>
          <li class="ml-10 relative th-link">
            <a href="<%= navItems[2].href %>" class="group text-gray-700 transition duration-300">
              <%= navItems[2].text %>
              <i class="fa-solid fa-chevron-down"></i>
            </a>
            <ul class="absolute left-0 mt-2 w-40 hidden rounded-lg bg-white shadow-md th-link-dropdown-menu">
              <li><a href="<%= navItems[2].dropdown[0].href %>" class="block px-4 py-2 text-gray-700"><%= navItems[2].dropdown[0].text %></a></li>
              <li><a href="<%= navItems[2].dropdown[1].href %>" class="block px-4 py-2 text-gray-700"><%= navItems[2].dropdown[1].text %></a></li>
              <li><a href="<%= navItems[2].dropdown[2].href %>" class="block px-4 py-2 text-gray-700"><%= navItems[2].dropdown[2].text %></a></li>
            </ul>
          </li>
        </ul>
      </nav>

      <div class="w-1/3 flex justify-center">
        <button class="border border-transparent bg-black px-20 py-3 text-white transition duration-300 hover:border-black hover:bg-white hover:text-black">
          <a href="contact.html" class="text-inherit"><%= contactHeaderButtonText %></a>
        </button>
      </div>
    </div>

    <!-- Social Media -->
    <div id="socials" class="fixed top-56 right-0 text-center bg-white px-2 py-4 socials">
      <div class="flex flex-col justify-center">
        <a href="<%= socials.phone %>" target="_blank" class="my-2 text-black transition duration-300 hover:text-white">
          <i class="fa-solid fa-phone-volume phone-icon"></i>
        </a>
        <a href="<%= socials.instagram %>" target="_blank" class="my-2 text-black transition duration-300 hover:text-white">
          <i class="fab fa-instagram fa-2x"></i>
        </a>
        <a href="<%= socials.whatsapp %>" target="_blank" class="my-2 text-black transition duration-300 hover:text-white">
          <i class="fab fa-whatsapp fa-2x"></i>
        </a>
        <a href="<%= socials.facebook %>" target="_blank" class="my-2 text-black transition duration-300 hover:text-white">
          <i class="fab fa-facebook fa-2x"></i>
        </a>
        <a href="<%= socials.tiktok %>" target="_blank" class="my-2 text-black transition duration-300 hover:text-white">
          <i class="fab fa-tiktok fa-2x"></i>
        </a>
      </div>
    </div>

    <!-- MOBILE -->
    <div class="flex w-full items-center justify-between text-gray-800 font-bold md:hidden lg:hidden">
      <div></div>
      <a href="index.html" class="transition duration-300 hover:text-blue-400">
        <img src="../assets/public/images/logo.png" alt="Logo" class="h-36 logo-mobile" />
      </a>
      <button id="menu-toggle" class="justify-self-end focus:outline-none md:hidden">
        <svg class="h-6 w-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Dropdown Menu -->
    <div id="mobile-menu" class="mobile-menu max-h-0 overflow-hidden bg-white shadow-lg transition-all duration-300 ease-in-out md:hidden">
      <ul>
        <% navItems.forEach(function(item) { %>
          <% if (item.dropdown) { %>
            <li class="relative">
              <button class="flex w-full items-center justify-between py-2 pl-4 text-left text-gray-700 transition duration-300 hover:text-blue-400 dropdown-toggle">
                <%= item.text %> <i class="fa-solid fa-chevron-down"></i>
              </button>
              <ul class="hidden rounded-lg bg-white shadow-md dropdown-menu">
                <% item.dropdown.forEach(function(subItem) { %>
                  <li><a href="<%= subItem.href %>" class="block px-4 py-2 text-gray-700 transition hover:bg-gray-100"><%= subItem.text %></a></li>
                <% }); %>
              </ul>
            </li>
          <% } else { %>
            <li>
              <a href="<%= item.href %>" class="block py-2 pl-4 text-gray-700 transition duration-300 hover:bg-gray-100 hover:text-blue-400"><%= item.text %></a>
            </li>
          <% } %>
        <% }); %>
      </ul>
    </div>
  </header>

  <!-- Main content -->
  <%- body %>

  <!-- Footer -->
  <footer class="bg-black py-12 text-white">
    <div class="container mx-auto grid grid-cols-1 gap-10 px-6 text-center md:grid-cols-3 md:text-left">
      
      <!-- Contact Info -->
      <div>
        <h3 class="mb-4 text-xl font-semibold"><%= footerHeaders.footerHeaderOneText %></h3>
        <p class="text-gray-400"><%= footerInfo.address %></p>
        <p class="mt-2 text-gray-400">
          Phone: 
          <a href="tel:<%= footerInfo.phone %>" class="transition duration-300 hover:text-blue-300">
            <%= footerInfo.phone %>
          </a>
        </p>
        <p class="mt-2 text-gray-400">
          Email: 
          <a href="mailto:<%= footerInfo.email %>" class="transition duration-300 hover:text-blue-300">
            <%= footerInfo.email %>
          </a>
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="mb-4 text-xl font-semibold"><%= footerHeaders.footerHeaderTwoText %></h3>
        <ul class="space-y-3">
          <% footerLinks.quickLinks.forEach(function(link) { %>
            <li>
              <a href="<%= link.href %>" class="text-gray-400 transition duration-300 hover:text-blue-300">
                <%= link.text %>
              </a>
            </li>
          <% }); %>
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="mb-4 text-xl font-semibold"><%= footerHeaders.footerHeaderThreeText %></h3>
        <div class="flex justify-center space-x-8 md:justify-start">
          <% footerLinks.social.forEach(function(link) { %>
            <a href="<%= link.url %>" target="_blank" class="text-gray-400 transition duration-300 hover:text-blue-300">
              <i class="<%= link.iconClass %> fa-lg"></i>
            </a>
          <% }); %>
        </div>
      </div>
    </div>

    <div class="mt-12 border-t border-gray-700 pt-6 text-center text-sm text-gray-500">
      &copy; <%= currentYear %> <%= footerInfo.companyName %>. All rights reserved.
    </div>
  </footer>

  <!-- Scripts -->
  <script src="<%= scriptsLinks.headerDynamicsScript %>"></script>
  <script src="<%= scriptsLinks.scrollDynamicsScript %>"></script>
  <script src="<%= scriptsLinks.parallaxImageScript %>"></script>
  <script src="<%= scriptsLinks.reviewsV2Script %>"></script>
  <script src="<%= scriptsLinks.reviewsV2mobileScript %>"></script>
  <script src="<%= scriptsLinks.parallaxImageReviewV2Script %>"></script>
  <script src="<%= scriptsLinks.galleryScript %>"></script>
  <script src="<%= scriptsLinks.formValidationsScript %>"></script>
  <script src="<%= scriptsLinks.mainScript %>"></script>
  <script src="<%= scriptsLinks.servicesCardsTwoScript %>"></script>
  <script src="<%= scriptsLinks.loadComponentsScript %>"></script>
</body>
</html>
